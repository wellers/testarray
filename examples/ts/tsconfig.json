{
	"compilerOptions": {
		"target": "esnext",
		"module": "ES2020",
		"outDir": "dist",
		"sourceMap": true,
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}