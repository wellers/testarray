{
	"compilerOptions": {
		"target": "esnext",
		"module": "ES2020",
		"outDir": "dist",
		"sourceMap": true,
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"typeRoots": [
            "./node_modules/@types"
        ]		
	},	
	"include": [
		"src/**/*.ts",
		"src/index.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}